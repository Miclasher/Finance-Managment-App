@using Microsoft.AspNetCore.Components.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Finance Managment</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>

            <AuthorizeView>
                <Authorized>
                    <NavLink class="nav-link" href="/transactionTypes" Match="NavLinkMatch.All">
                        <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Transaction Types
                    </NavLink>
                    <NavLink class="nav-link" href="/financialOperations" Match="NavLinkMatch.All">
                        <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Financial Operations
                    </NavLink>
                    <NavLink class="nav-link" href="/daySummary" Match="NavLinkMatch.All">
                        Day Summary
                    </NavLink>
                    <NavLink class="nav-link" href="/dateRangeSummary" Match="NavLinkMatch.All">
                        Date Range Summary
                    </NavLink>
                    <NavLink class="nav-link" style="position: absolute; bottom: 0;" href="/logout" Match="NavLinkMatch.All">
                        Sign out
                    </NavLink>
                </Authorized>
                <NotAuthorized>
                    <div style="position: absolute; bottom: 0;" class="container">
                        <NavLink class="nav-link" href="/login" Match="NavLinkMatch.All">
                            Sign in
                        </NavLink>
                        <NavLink class="nav-link" href="/register" Match="NavLinkMatch.All">
                            Sign up
                        </NavLink>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </nav>
</div>
